---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import { getTopProducts } from '../utils/productUtils';

// Get featured products
const featuredProducts = await getTopProducts(4);

// Hero images and animations will use local paths or CDN URLs
const heroBackgroundImage = "https://images.unsplash.com/photo-1532187863486-abf9dbad1b69?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80";
---

<Layout 
  title="Complete Health Peptides | Premium Research Peptides"
  description="Discover peptides intended for laboratory and scientific research purposes. Products designed for in-vitro research applications."
>
  <!-- Hero Section with Parallax Effect -->
  <section class="relative overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url('${heroBackgroundImage}')`}></div>
    <div class="absolute inset-0">
      <img 
        src="https://ndnipypqvrgatuoocmcr.supabase.co/storage/v1/object/public/site-images//bfe8d0f4-cc54-4033-b5c5-892451f47dc8.png" 
        alt="Background Gradient" 
        class="w-full h-full object-cover blur-md scale-105 transform"
      />
    </div>
    
    <!-- Content -->
    <div class="container mx-auto px-4 py-24 md:py-36 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="max-w-xl fade-in-left">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6 text-white leading-tight">
            Next-Generation<br/>Research Compounds
          </h1>
          <p class="text-xl text-white/90 mb-8 leading-relaxed">
            Peptides and research chemicals designed for advanced scientific investigation and laboratory use.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/products" class="bg-white text-primary-700 hover:bg-gray-100 px-8 py-4 rounded-md font-medium transition transform hover:scale-105 duration-300 shadow-lg">
              Browse Catalog
            </a>
            <a href="/contact" class="bg-transparent border-2 border-white text-white hover:bg-white/10 px-8 py-4 rounded-md font-medium transition">
              Contact Us
            </a>
          </div>
        </div>
        
        <div class="hidden lg:block">
          <div class="relative">
            <!-- Floating product cards for visual interest -->
            <div class="absolute w-64 h-64 -left-10 top-0 transform rotate-6 shadow-xl rounded-lg overflow-hidden border border-white/10 backdrop-blur-sm bg-white/10 fade-in scale-animation">
              <div class="p-6">
                <h3 class="text-white font-bold text-xl mb-2">Tirzepatide 30mg</h3>
                <p class="text-white/80 mb-4">For precise research applications</p>
                <div class="font-bold text-white text-xl">$179.99</div>
              </div>
            </div>
            
            <div class="absolute w-64 h-64 right-0 bottom-10 transform -rotate-3 shadow-xl rounded-lg overflow-hidden border border-white/10 backdrop-blur-sm bg-white/10 fade-in delay-200 scale-animation">
              <div class="p-6">
                <h3 class="text-white font-bold text-xl mb-2">BPC-157 10mg</h3>
                <p class="text-white/80 mb-4">Research peptide compound</p>
                <div class="font-bold text-white text-xl">$89.99</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 hidden md:block">
        <div class="animate-bounce bg-white/30 p-2 rounded-full backdrop-blur-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Value Propositions -->
  <section class="py-12 bg-white relative z-10">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-gray-50 p-8 rounded-xl shadow-sm border border-gray-100 text-center hover:shadow-md transition hover:border-primary-100 hover:bg-primary-50 group">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-100 rounded-full text-primary-600 mb-6 mx-auto group-hover:bg-primary-200 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
